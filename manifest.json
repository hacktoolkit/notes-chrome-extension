{
  "name": "Chrome Notes Extension",
  "description": "Chrome extension to allow users to easily take and store notes on URLs directly on the browser.",
  "version": "1.0",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "mainpopup.html",
    "default_icon": {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["jquery.js", "mainpopup.js"]
    }
  ],
  "background": {
    "scripts": ["backgroundScriptOnInstall.js"],
    "persistent": false
  },
  "permissions": ["declarativeContent", "storage", "tabs"],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+N",
        "mac": "MacCtrl+Shift+N"
      },
      "description": "Opens the extension popup with the following key shortcut."
    }
  },
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js; object-src 'self'"
}
